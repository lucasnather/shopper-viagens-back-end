generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Customer {
  id        String   @id @default(uuid())
  name      String
  email     String?  @unique
  createdAt DateTime @default(now()) @map("created_at")
  Ride      Ride[]

  @@map("customer")
}

model Driver {
  id          String   @id @default(uuid())
  name        String
  description String
  car         String
  rating      String
  tax         String
  milage      Int
  createdAt   DateTime @default(now()) @map("created_at")
  Ride        Ride[]

  @@map("driver")
}

model Ride {
  id          Int      @id @default(autoincrement())
  date        DateTime
  origin      String
  destination String
  distance    String
  duration    String
  value       String
  customer    Customer @relation(fields: [customerId], references: [id])
  customerId  String   @map("customer_id")
  driver      Driver   @relation(fields: [driverId], references: [id])
  driverId    String   @map("driver_id")

  @@map("ride")
}
